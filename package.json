{
    "name": "neon-tetris",
    "description": "A modern Tetris game with neon aesthetics, built with Phaser 3, React, and TypeScript.",
    "version": "1.0.0",
    "repository": {
        "type": "git",
        "url": "git+https://github.com/mjstudio/neon-tetris.git"
    },
    "author": "MJStudio",
    "license": "MIT",
    "licenseUrl": "http://www.opensource.org/licenses/mit-license.php",
    "bugs": {
        "url": "https://github.com/mjstudio/neon-tetris/issues"
    },
    "homepage": "https://tetris.mjstudio.net",
    "keywords": [
        "tetris",
        "neon",
        "game",
        "phaser",
        "phaser3",
        "react",
        "vite",
        "typescript"
    ],
    "scripts": {
        "dev": "node log.js dev & vite --config vite/config.dev.mjs",
        "build": "node log.js build & vite build --config vite/config.prod.mjs",
        "dev-nolog": "vite --config vite/config.dev.mjs",
        "build-nolog": "vite build --config vite/config.prod.mjs",
        "format": "prettier --write \"src/**/*.{js,jsx,ts,tsx,json,css,scss,md}\" --log-level silent",
        "lint": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
        "lint:fix": "eslint . --ext ts,tsx --fix",
        "t": "pnpm lint && pnpm tsc --noEmit"
    },
    "dependencies": {
        "phaser": "^3.90.0",
        "react": "^19.0.0",
        "react-dom": "^19.0.0"
    },
    "devDependencies": {
        "@eslint/js": "^9.22.0",
        "@types/react": "^19.0.10",
        "@types/react-dom": "^19.0.4",
        "@vitejs/plugin-react": "^4.3.4",
        "eslint": "8",
        "eslint-config-prettier": "^10.1.8",
        "eslint-plugin-prettier": "^5.5.4",
        "eslint-plugin-react-hooks": "^5.2.0",
        "eslint-plugin-react-refresh": "^0.4.19",
        "globals": "^16.0.0",
        "prettier": "^3.6.2",
        "terser": "^5.28.1",
        "typescript": "~5.7.2",
        "typescript-eslint": "^8.26.1",
        "vite": "^6.3.1"
    },
    "packageManager": "pnpm@10.17.1+sha512.17c560fca4867ae9473a3899ad84a88334914f379be46d455cbf92e5cf4b39d34985d452d2583baf19967fa76cb5c17bc9e245529d0b98745721aa7200ecaf7a"
}
